{% extends "layout/base.html.jinja2" %}

{% block content %}
    {% if not auth.allow_edit %}
        <div class="row m-1">
            <a href="/suggest">添加Patch</a>
        </div>
    {% endif %}

    <div class="row mt-4">
        <ul class="list-group">
            {% for patch in rows %}
                <a href="/patch/{{ patch.id }}" id="{{ patch.id }}"
                   target="_blank" rel="noopener"
                   class="list-group-item list-group-item-action flex-column align-items-start"
                >
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">
                            {% if patch.state == 1 %}
                                {# accept #}
                                <span class="badge bg-success">Accept</span>
                            {% elif patch.state == 2 %}
                                {# rejected #}
                                <span class="badge bg-danger">Rejected</span>
                            {% elif patch.state == 3 %}
                                <span class="badge bg-secondary">Outdated</span>
                            {% endif %}
                        </h5>
                        {% if patch.state %}
                            <small title="{{ patch.created_at }}">reviewed
                                at {{ patch.updated_at | rel_time }}</small>
                        {% else %}
                            <small title="{{ patch.created_at }}">created
                                at {{ patch.created_at | rel_time }}</small>
                        {% endif %}
                    </div>
                    {% if not patch.state %}
                        <p class="mb-1"
                           style="overflow: hidden; text-overflow: ellipsis;">
                            {{ patch.description }}
                        </p>
                    {% endif %}
                    <small>subject: {{ patch.subject_id }}</small>
                    <small>from: {{ patch.from_user_id }}</small>
                </a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
